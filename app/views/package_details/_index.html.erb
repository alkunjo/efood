  <p id="notice"><%= notice %></p>


  <label>Detail Paket</label>
  <%= link_to 'New Package detail', new_package_package_detail_path(@package), :class => "btn btn-sm btn-default", remote: true %>

  <table class="table table-hover table-responsive">
    <thead>
      <tr>
        <th>Makanan</th>
        <th colspan="3">Hapus</th>
      </tr>
    </thead>

    <tbody>
      <% @package.package_details.each do |package_detail| %>
        <tr>
          <td><%= food = Food.find_by(id: package_detail.food_id); food.name %></td>
          <td><%= link_to 'Destroy', [package_detail.package,package_detail], method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-sm btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body"></div>
    </div>
  </div>
</div>