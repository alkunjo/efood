<div class="container">
  <p id="notice"><%= notice %></p>


  <label>Detail Paket</label>
  <%= link_to 'New Package detail', new_package_detail_path, :class => "btn btn-sm btn-default", remote: true %>

  <% if @package_details.present? %>
  <table>
    <thead>
      <tr>
        <th>Makanan</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @package_details.each do |package_detail| %>
        <tr>
          <td><%= package_detail.food %></td>
          <td><%= link_to 'Destroy', package_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% else %><br/>No food yet<% end %>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body"></div>
    </div>
  </div>
</div>
</div>