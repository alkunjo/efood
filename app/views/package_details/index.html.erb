<p id="notice"><%= notice %></p>

<h1>Listing Package Details</h1>

<table>
  <thead>
    <tr>
      <th>Package</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @package_details.each do |package_detail| %>
      <tr>
        <td><%= package_detail.package %></td>
        <td><%= link_to 'Show', package_detail %></td>
        <td><%= link_to 'Edit', edit_package_detail_path(package_detail) %></td>
        <td><%= link_to 'Destroy', package_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

