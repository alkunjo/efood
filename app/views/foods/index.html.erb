<p id="notice"><%= notice %></p>

<h1>Listing Foods</h1>

<%= link_to 'New Food', new_food_path, :class => "btn btn-default btn-sm", remote: true %>
<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th colspan="3"><center>Actions</center></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= image_tag food.image.url(:med), :class => "img-responsive" %></td>
        <td><%= link_to 'Show', food, :class => "btn btn-default btn-sm", remote: true %></td>
        <td><%= link_to 'Edit', edit_food_path(food), :class => "btn btn-primary btn-sm", remote: true %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header" align="center">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"></h4>
      </div>
      <div class="modal-body"></div>
    </div>
  </div>
</div>
