<p id="notice"><%= notice %></p>

<h1>Listing Food Types</h1>

<%= link_to 'New Food Type', new_food_type_path, :class => "btn btn-default btn-sm", remote: true %>
<table class="table table-stripped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"><center>Action</center></th>
    </tr>
  </thead>

  <tbody>
    <% @food_types.each do |foodType| %>
      <tr>
        <td><%= foodType.name %></td>
        <td><%= link_to 'Edit', edit_food_type_path(foodType), :class => "btn btn-primary btn-sm", remote: true %></td>
        <td><%= link_to 'Destroy', foodType, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog"style="width:450px">
    <div class="modal-content">
      <div class="modal-header" align="center">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"></h4>
      </div>
      <div class="modal-body"></div>
    </div>
  </div>
</div>
